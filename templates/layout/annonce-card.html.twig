  
<div class="card shadow-sm">
    {% if annonce.images|length > 0 %}
        <img class='card-img-top' width="100%" height="225" src="{{ vich_uploader_asset( annonce.images|first, 'imageFile') }}">

        {% else %}

            <svg  class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

        {% endif %}

        <div class="card-body">
            <h4> {{annonce.titre }}</h4>
            <p class="card-text">{{annonce.discreption }}</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="{{ path('page_details',{slug: annonce.slug}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                    {% if is_granted('ROLE_USER')%}
                        <a  href="{{ path('page_Edit',{slug: annonce.slug}) }}"type="button" class="btn btn-sm btn-outline-secondary" >Edit</a>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <a  href="{{ path('page_delete',{slug: annonce.slug}) }}"type="button" class="btn btn-sm btn-outline-secondary" >Delete</a>
                    {% endif%}
                </div>
                <small class="text-body-secondary">{{annonce.dateCreation|ago}}</small>
            </div>
        </div>
</div>
<br><br>


